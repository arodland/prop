</form>
<div class="results">
<template x-for="result in results">
    <div class="result">
        <h3 x-text="result.name"></h3>
        <div x-show="result.content" x-transition.opacity x-html="result.content"></div>
        <div class="overlay" x-show="result.loading">
            <div class="loader"></div>
        </div>
    </div>
</template>
